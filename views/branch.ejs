<% layout('layout/boilerplate') %>

<style>
  label{
    color:#842E66;
    font-size: 22px;
  }
</style>
<div class="container my-5">
    <div class="row mt-5">
        <div class="col-lg-6 offset-lg-3 ">
    <div class="card mt-5">
        <div class="card-body">   
            
    <form method="post"  class="row" action="/branch">
        <div class="form-group mb-3">
            <label class="form-label" for="bname"> Branch Name:</label>
            <input type="text" name="Branch_Name" id="bname" class="form-control">
        </div> 
        <div class="form-group mb-3">
            <label class="form-label" for="location"> Branch Location:</label>
            <input type="text" name="Location" id="location" class="form-control">
        </div> 

        <div class="col-3 d-grid gap-2 mb-3">
          <button class="btn btn-secondary">ADD </button>
        </div>
     <div class="col-3 d-grid gap-2 mb-3">
      <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
          DELETE 
            </button>
        </div>
        <div class="col-3 d-grid gap-2 mb-3">
          <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#staticModel">
            UPDATE 
          </button>
    </div>
    <div class="col-3 d-grid gap-2 mb-3">
        <a href="/branch/view" class="btn btn-secondary">View</a>
    </div>
    </form>
</div>
</div>
</div>
</div>
</div>


<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">DELETE A BRANCH</h5>
          
        </div>
        <div class="modal-body">
          <form action="/branch?_method=DELETE" method="post">
            <div class="mb-3">
                <label for="BRANCH_id" class="form-label">BRANCH ID</label>
                <input type="text" class="form-control" name="Branch_Id" id="BRANCH_id">
            </div>
           
            <div class="d-grid gap-2">
                <button class="btn btn-danger">DELETE</button>
            </div>
        </form>
        
        </div>
       
      </div>
    </div>
  </div>

  <div class="modal fade" id="staticModel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticModel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">UPDATE A BRANCH</h5>
        </div>
        <div class="modal-body">
          <form action="/branch?_method=PUT" method="post">
            <div class="mb-3">
                <label for="BRANCH_id" class="form-label">BRANCH ID</label>
                <input type="text" class="form-control" name="Branch_Id" id="BRANCH_id">
            </div>
                <div class="form-group mb-3">
                  <label class="form-label" for="bname"> Branch Name:</label>
                  <input type="text" name="Branch_Name" id="bname" class="form-control">
              </div> 
              <div class="form-group mb-3">
                  <label class="form-label" for="location"> Branch Location:</label>
                  <input type="text" name="Location" id="location" class="form-control">
                 
              
              </div>
            <div class="d-grid gap-2">
                <button class="btn btn-warning">UPDATE</button>
            </div>
        </form>
        
        </div>
       
      </div>
    </div>
  </div>