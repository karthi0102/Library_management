<div class="container my-3">
    <div class="row">
        <div class="col-lg-6 offset-3">
            <div class="card shadow">
                <div class="card-body">
    <h4 class="text-center display-4">Return Form</h4>
    <form action="/return" get="post">
        <div class="form-group mb-3">
            <label class="form-label" for="book_id"> Book Id</label mb-3>
            <input type="text" name="Book_id" id="book_id" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label class="form-label" id="issue"> Issue Date:</label>
            <input type="date" name="Issue_Date" id="issue" class="form-control">
           
        </div>
        <div class="form-group mb-3">
            <label class="form-label" for="expiry"> Expiray Date:</label>
            <input type="date" name="Expire_Date" id="expiry" class="form-control">
            
        </div> 
        <div class="form-group mb-3">
            <label class="form-label" id="bname"> Book Name:</label>
            <input type="text" name="Book_Name" id="bname" class="form-control">
            
        </div> 
        <div class="form-group mb-3">
            <label class="form-label" for="iid"> Issue Id:</label>
            <input type="text" name="Issue_Id" id="iid" class="form-control">
,        </div> 
        <div class="form-group mb-3">
            <label class="form-label" for="member_id"> Member Id</label>
            <input type="text" name="Member_Id" id="member_id" class="form-control">
           
        </div>
        <div class="form-group mb-3">
            <label class="form-label" for="sid"> Staff Id</label>
            <input type="text" name="Staff_Id" id="sid" class="form-control">
           
        </div>
        <div class="d-grid gap-2">
            <button class="btn btn-primary">Return a Book</button>
          
        </div>   
      
    </form>
</div>
</div>
</div>
