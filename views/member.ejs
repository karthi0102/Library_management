<% layout('layout/boilerplate') %>
<style>
  label{
    color:#842E66;
    font-size: 22px;
  }
</style>
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="card shadow">
                    <div class="card-body">
                       
        <form class="row" name="form" actiom="/member" method="post">
            <div class="mb-3 ">
                <label class="form-label" for="cust_name">MEMBER NAME</label>
                <input class="form-control" type="text" id="cust_name" name="Member_Name">
            </div>
            <div class="mb-3 ">
                <label class="form-label" for="cust_email">MEMBER EMAIL</label>
                <input class="form-control" type="email" id="cust_email" name="Member_Email">
            </div>
            <div class="mb-3">
                <label for="mobile" class="form-label">MEMBER PHONE</label>
                <input type="text" id="mobile" name="Member_Phone" class="form-control">
            </div>
            <div class="mb-3">
              <label class="form-label" for="branch_id">BRANCH_ID:</label>
              <input class="form-control" type="text" id="branch_id" name="Branch_Id">
          </div>
            <div class="mb-3">
                <label class="form-label" for="cust_email">CUSTOMER ADDRESS:</label>
                <textarea class="form-control" name="Member_Address" id="address" cols="2" rows="2"></textarea>
            </div>
            
            <div class="d-grid gap-2 col-3 mb-3">
                <button class="btn btn-secondary">ADD</button>
              </div>
              <div class="d-grid gap-2 col-3 mb-3">
                <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                    DELETE 
                  </button>
                </div>
                <div class="d-grid gap-2 col-3 mb-3">
                  <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#staticModel">
                    UPDATE
                  </button>
                </div>
                <div class=" d-grid gap-2 col-3 mb-3">
                  <a href="/member/view" class="btn btn-secondary">VIEW</a>
                </div>
            </div>
        </div>
    </div>
    </div>
    
    </div>
    </div>

    
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="staticBackdropLabel">DELETE A BOOK</h5>
              
            </div>
            <div class="modal-body">
              <form action="/book?_method=DELETE" method="post">
                <div class="mb-3">
                    <label for="book_id" class="form-label">MEMBER ID</label>
                    <input type="text" class="form-control" name="Member_Id" id="book_id">
                </div>
               
                <div class="d-grid gap-2">
                    <button class="btn btn-danger">DELETE</button>
                </div>
            </form>
            
            </div>
           
          </div>
        </div>
      </div>

      <div class="modal fade" id="staticModel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticModel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="staticBackdropLabel">DELETE A MEMBER</h5>
              
            </div>
            <div class="modal-body">
              <form action="/book?_method=PUT" method="post">
                <div class="mb-3">
                    <label for="book_id" class="form-label">MEMBER ID</label>
                    <input type="text" class="form-control" name="Member_Id" id="book_id">
                </div>
                <div class="mb-3 ">
                  <label class="form-label" for="book_id" >MEMBER NAME </label>
                   <input class="form-control" type="text" id="Book_id"  name="Member_Name" autofocus> 
              </div>

               <div class="mb-3">
                   <label for="phone" class="form-label">MEMBER PHONE</label>
                   <input type="tel" class="form-control" name="Member_Phone" id="phone">
               </div>
               <div class="mb-3">
                <label for="add" class="form-label">MEMBER ADDRESS</label>
               <textarea name="Member_Address" id="add" cols="4" class="form-control" rows="4"></textarea>
            </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-secondary">UPDATE</button>
                </div>
            </form>
            
            </div>
           
          </div>
        </div>
      </div>